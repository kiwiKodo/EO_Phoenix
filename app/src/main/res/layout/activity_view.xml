<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:use_controller="false" />

    <!-- Dimming overlay placed above the PlayerView so we can control video brightness -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone"
        android:alpha="1.0" />

    <!-- Sleep/Wake overlay used instead of switching Activities -->
    <FrameLayout
        android:id="@+id/sleepOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone"
        android:alpha="1.0">

        <TextView
            android:id="@+id/sleepOverlayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sleeping..."
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:layout_gravity="center" />

    </FrameLayout>
</FrameLayout>

